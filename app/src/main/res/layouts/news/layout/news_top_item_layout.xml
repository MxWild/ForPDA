<?xml version="1.0" encoding="utf-8"?>
<forpdateam.ru.forpda.views.widgets.FixCardView
    android:id="@+id/top_news_conteiner"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/top_news_cover"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/test_img"
            android:contentDescription="img"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/top_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textStyle="bold"
            android:layout_margin="@dimen/dp8"
            tools:text="The best news bla. The best news scasfasf. The best news sdf. The best news fsf. The best news. "/>

        <TextView
            android:id="@+id/top_news_comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            tools:text="123"/>
    </LinearLayout>

</forpdateam.ru.forpda.views.widgets.FixCardView>