<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/news_top_header_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp8"
        android:text="Top"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/news_top_header_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_marginStart="@dimen/dp8"
        android:text="самых комментируемых новостей"
        android:textStyle="italic"
        tools:ignore="HardcodedText"/>
    <forpdateam.ru.forpda.views.widgets.FixCardView
        android:id="@+id/news_top_comments_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/news_top_comments_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </forpdateam.ru.forpda.views.widgets.FixCardView>

    <TextView
        android:id="@+id/news_top_header_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp8"
        android:text="Новости"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText"/>
</LinearLayout>